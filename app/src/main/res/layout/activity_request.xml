
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="in.co.iodev.keralarescue.Activities.Request"
    android:orientation="vertical">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <LinearLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3a78e2"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3368c1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Kerala Flood Rescue"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            android:paddingEnd="-50dp"
            android:src="@mipmap/phone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"

            android:text="Number of people"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/numbe_of_people"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:inputType="number"
            android:background="@drawable/rounded_edge_white_bg"
            android:layout_height="50dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"

            android:text="Contact number"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:inputType="phone"
            android:id="@+id/contact_number"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:background="@drawable/rounded_edge_white_bg"
            android:layout_height="50dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"

            android:text="Alternate contact number"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/alternate_contact_number"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="20dp"
            android:background="@drawable/rounded_edge_white_bg"
            android:layout_height="50dp"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_marginBottom="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    </LinearLayout>
    <RelativeLayout

        android:layout_below="@id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f1f5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/location"
                android:scaleType="fitCenter"/>
            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detected Location"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"></TextView>
                <EditText
                    android:id="@+id/location_text"
                    android:enabled="false"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"></EditText>

            </LinearLayout>
            <ImageView
                android:id="@+id/location_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:src="@mipmap/edit"
                android:tint="@android:color/black"
                android:scaleType="fitCenter"/>
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/rounded_edge_white_bg"
        android:elevation="10dp">

        <Button
            android:id="@+id/request_help"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_edge_white_bg"
            android:text="REQUEST RESCUE"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#3a78e2"
            android:paddingLeft="10dp"
            android:drawableLeft="@mipmap/helpblue"
            />
    </android.support.v7.widget.CardView>


</RelativeLayout>
